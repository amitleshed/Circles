.edit_wrapper
  %h1 circles Customer Account
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| 
    = f.error_notification

    .edit_inputs
      .edit_input
        = f.input :first_name, label: false, required: true, autofocus: true, placeholder: "First Name"
        = f.input :last_name, label: false, required: true, placeholder: "Last Name"
        = f.input :email, required: true, label: false, placeholder: "Email"
        = f.input :city, label: false, placeholder: "City"
      

      

      - if devise_mapping.confirmable? && resource.pending_reconfirmation? 
        %p Currently waiting confirmation for: 
        = resource.unconfirmed_email
      .edit_input
        = f.input :state, label: false, placeholder: "State"
        = f.input :password, autocomplete: "off", required: false, label: false, placeholder: "New Password"
        = f.input :password_confirmation, label: "Confirm Password", required: false, label: false, placeholder: "Confirm New Password"
        = f.input :current_password, placeholder: "Current Password", label: false

      .form-actions
        .center
          = f.button :submit, "Update", class: "button"

  .center
    %h3 Cancel My Account
    %p Unhappy? #{link_to "Cancel my account", registration_path(resource_name), method: :delete}
 




